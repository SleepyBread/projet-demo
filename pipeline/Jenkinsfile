pipeline {
    agent any

    stages {
        stage("Configuration") {
            echo "Configuration"
            bat "npm install"
        }

        stage("Build") {
            steps {
                echo "Building"
                bat "ng build"
            }
        }

        stage("Unit & Integration tests") {
            steps {
                echo "Unit & Integration tests"
                bat "ng test --progress=false --watch=false --browsers=ChromeHeadless"
            }
        }
    }
}
